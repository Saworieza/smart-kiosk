<div class="container">
  <div class="row">
    <%= render 'partials/sidebar', action: 'stores' %>
    <div class="col-lg-10 col-md-7 col-sm-12 col-xs-12 right-relative">
      <div class="col-lg-10 col-lg-offset-1">
        <h3>Listing Stores</h3>
        <br>
        <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#newStoreModal">
          New Store
      </button><br>
        <br>
        <% if @stores.empty? %>
          <h5 class="no-text">You have not added any Stores yet! Go ahead and click the button above to add.</h5>
        <% else %>
          <table class="table table-striped">
            <thead>
              <tr>
                <th>Address</th>
                <th>Vendor</th>
                <th colspan="2"></th>
              </tr>
            </thead>
            <tbody>
              <% @stores.each do |store| %>
                <tr>
                  <td><%= store.address %></td>
                  <td><%= store.vendor.name %></td>
                  <td><%= link_to 'Edit', edit_store_path(store) %></td>
                  <td><%= link_to 'Destroy', store, method: :delete, data: { confirm: 'Are you sure?' } %></td>
                </tr>
              <% end %>
            </tbody>
          </table>
        <% end %>
      </div>
      <br>
      <div class="modal fade" id="newStoreModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
        <div class="modal-dialog">
          <div class="modal-content">
            <div class="modal-header">
              <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
              <h4 class="modal-title" id="myModalLabel">Create New Store</h4>
            </div>
            <div class="modal-body">
              <%= render 'form' %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
