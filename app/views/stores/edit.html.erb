<div class="container">
  <div class="row">
    <%= render 'partials/sidebar', action: 'items' %>
    <div class="col-lg-10 col-md-7 col-sm-12 col-xs-12 right-relative">
      <h3>Editing Store</h3>
      <%= form_for @store do |f| %>
        <div class="form-group">
          <%= f.label :address %><br>
          <%= f.text_field :address, class: 'form-control' %>
        </div>
        <div class="form-group">
          <%= f.submit :update, class: 'btn btn-primary' %>
        </div>
      <% end %>
    </div>
  </div>
</div>
