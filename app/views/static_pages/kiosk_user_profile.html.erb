<div class="container">
  <div class="row">
    <div class="col-lg-10 col-lg-offset-1">
      <div class="row user-info">
        <div class="col-lg-3">
          <%= render 'partials/large_avatar', user: @user %>
        </div>
        <div class="col-lg-6">
          Credit Points <%= @user.points %>
        </div>
        <div class="col-lg-3">
        </div>
      </div>
    </div>
  </div>
  <div class="row">
    <div class="col-lg-10 col-lg-offset-1">
      <div class="row suggested-items">
        <h4><b>Items you are Looking for</b></h4>
        <% @items.each do |item| %>
          <div class="col-sm-6 col-md-3 col-lg-3">
            <div class="thumbnail">
              <%= render 'partials/square_avatar', user: item %>
              <div class="caption">
                <h4><%= item.name %></h4>
                <p><%= item.description %></p>
              </div>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
