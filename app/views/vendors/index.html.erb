<div class="container">
  <div class="row">
    <%= render 'partials/sidebar', action: 'dashboard' %>
    <div class="col-lg-10 col-md-7 col-sm-12 col-xs-12 right-relative">
      <div class="col-lg-12">
        <h3>Dashboard</h3>
        <br>
      </div>
      <div class="row stats">
        <div class="col-lg-12">
          <div class="col-lg-3">
            <div class="info-box">
              <span class="info-box-icon bg-green">
                <i class="ion ion-cash"></i>
              </span>
              <div class="info-box-content">
                <span class="info-box-text">PROFIT</span>
                <span class="info-box-number">760</span>
              </div>
            </div>
          </div>
          <div class="col-lg-3">
            <div class="info-box">
              <span class="info-box-icon bg-blue">
                <i class="ion ion-ios-cart-outline"></i>
              </span>
              <div class="info-box-content">
                <span class="info-box-text">SALES</span>
                <span class="info-box-number">760</span>
              </div>
            </div>
          </div>
          <div class="col-lg-3">
            <div class="info-box">
              <span class="info-box-icon bg-red">
                <i class="ion ion-podium"></i>
              </span>
              <div class="info-box-content">
                <span class="info-box-text">GROWTH</span>
                <span class="info-box-number">760</span>
              </div>
            </div>
          </div>
          <div class="col-lg-3">
            <div class="info-box">
              <span class="info-box-icon bg-yellow">
                <i class="ion ion-ios-people-outline"></i>
              </span>
              <div class="info-box-content">
                <span class="info-box-text">MEMBERS</span>
                <span class="info-box-number"><%= @users.count %></span>
              </div>
            </div>
          </div>
        </div>
      </div>
      <div class="row">
        <div class="col-lg-12">
          <div class="col-lg-8">
            <div id="heatmapContainerWrapper">
              <div id="heatmapContainer">
              </div>
            </div>
          </div>
          <div class="col-lg-4">
            <div class="top-users">
              <h5><b>CUSTOMER RANKING</b></h5>
              <ul>
                <% @top_users.each do |user| %>
                  <li>
                    <div class="row">
                      <div class="col-lg-3">
                        <%= render 'partials/avatar', user: user %>
                      </div>
                      <div class="col-lg-9">
                        <h6><%= user.name %></h6>
                        <span><%= pluralize(user.points, "point") %></span>
                      </div>
                    </div>
                  </li>
                <% end %>
              </ul>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
