<div class="container">
  <div class="row">
    <%= render 'partials/sidebar', action: 'items' %>
    <div class="col-lg-10 col-md-7 col-sm-12 col-xs-12 right-relative">
      <div class="col-lg-10 col-lg-offset-1">
        <h3>Listing Items</h3>
        <br>
        <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#newItemModal">
          New Item
        </button><br>
        <br>
        <% if @items.empty? %>
          <h5 class="no-text">You have not added any Items yet! Go ahead and click the button above to add.</h5>
        <% else %>
          <div id="items" class="row">
            <% @items.each do |item| %>
              <div class="col-sm-6 col-md-3 col-lg-3">
                <div class="thumbnail">
                  <%= render 'partials/square_avatar', user: item %>
                  <div class="caption text-center">
                    <h5><%= item.name %></h5>
                    <h4><b><%= item.price %>$</b></h4>
                  </div>
                  <%= link_to 'Edit', edit_item_path(item), class: 'btn btn-primary btn-block' %>
                  <%= link_to 'Delete', item, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger btn-block' %>
                </div>
              </div>
            <% end %>
          </div>
        <% end %>
      </div>
      <br>
      <!-- Modal -->
      <div class="modal fade" id="newItemModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
        <div class="modal-dialog">
          <div class="modal-content">
            <div class="modal-header">
              <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
              <h4 class="modal-title" id="myModalLabel">Create New Item</h4>
            </div>
            <div class="modal-body">
              <%= render 'form' %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
